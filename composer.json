{
    "require": {
        "php": "^8.3",
        "minishlink/web-push": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "brain/monkey": "^2.6",
        "phpstan/phpstan": "^2.0",
        "szepeviktor/phpstan-wordpress": "^2.0",
        "phpstan/extension-installer": "^1.4"
    },
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "8.3.0"
        },
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse",
        "setup-hooks": "git config core.hooksPath .githooks && echo 'Git hooks installed from .githooks/'"
    }
}
